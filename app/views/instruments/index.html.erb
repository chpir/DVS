<% title "Instruments" %>

<table>
  <tr>
    <th>Round</th>
    <th>Name</th>
    <th>Description</th>
    <th>Keys</th>
  </tr>
  <% for instrument in @instruments %>
    <tr>
      <td><%=h instrument.round.name %></td>
      <td><%=h instrument.name %></td>
      <td><%=h instrument.description %></td>
      <td><%=h instrument.keys %></td>
      <td><%= link_to "Show", instrument %></td>
      <td><%= link_to "Edit", edit_instrument_path(instrument) %></td>
      <td><%= link_to "Destroy", instrument, :confirm => 'Are you sure?', :method => :delete %></td>
	  <td><%= link_to "Questions", :action => :questions, :id => instrument %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Instrument", new_instrument_path %></p>
