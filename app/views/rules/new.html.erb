<h1>New rule</h1>

<% form_for(@rule) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :tracking %><br />
    <%= f.text_field :tracking %>
  </p>
  <p>
    <%= f.label :rule %><br />
    <%= f.text_area :rule %>
  </p>
  <p>
    <%= f.label :rule_variable %><br />
    <%= f.text_field :rule_variable %>
  </p>
