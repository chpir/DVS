<h1>New variable</h1>

<% form_for(@variable) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :table_id %><br />
	<%= f.select(:table_id, Table.all.collect {|d| [h(d.name), d.id]}, :prompt => true) %>
  </p>
  <p>
    <%= f.label :variable_type_id %><br />
	<%= f.select(:variable_type_id, VariableType.all.collect {|d| [h(d.name), d.id]}, :prompt => true) %>
  </p>
  <p>
    <%= f.label :identifier %><br />
    <%= f.check_box :identifier %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', variables_path %>